      %a.delete(href="#") delete
    %p.actions= link_to 'Add Note', '#', class: "button add"
    %form.note(action="" method="post")
      %fieldset
        %dl
          %dt
            %label Note
          %dd
            %textarea(rows="8" cols="80")
